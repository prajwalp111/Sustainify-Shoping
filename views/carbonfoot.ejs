<body class="bg-light ">

    <%- include('partials/nav') %>

   
        <div class=" container-fluid navbar p-3 mb-2 text-white py-1">
            <h6 class="mx-auto  text-white">Carbon release and Water usage</h6>
        </div>
    </nav>

    <div class="main-wrapper" id="box1">



        <div class="container mt-4">
    
            <div class="row g-4">
              <div class="mb-3 col-md-9">
                <label for="productSelect" class="form-label">Select a Product:</label>
          <select id="productSelect" class="form-select">
            <option value="">-- Choose a product --</option>
            <option value="T-Shirt">T-Shirt</option>
            <option value="Jeans">Jeans</option>
            <option value="Shoes">Shoes</option>
            <option value="Laptop">Laptop</option>
            <option value="Smartphone">Smartphone</option>
        
            <!-- Food Items -->
            <option value="Apple">Apple</option>
            <option value="Banana">Banana</option>
